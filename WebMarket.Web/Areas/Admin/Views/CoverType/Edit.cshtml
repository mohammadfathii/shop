@model WebMarket.Models.CoverType

@{
    ViewData["Title"] = "Edit - CoverType " + Model.Name;
}

<h1>ویرایش</h1>

<h4>کاور تایپ - @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 pt-2">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-block btn-primary">بازگشت به لیست</a> | 
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-block btn-danger">حذف</a>
</div>

