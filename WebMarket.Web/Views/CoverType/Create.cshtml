@model CoverType

@{
    ViewData["Title"] = "Create";
}

<h1>ساخت</h1>

<h4>کاور تایپ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" class="border-1">
            <div class="form-group p-2">
                <label asp-for="Name" class="control-label"></label>
                <input placeholder="نام" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span> @*Show Errors*@
            </div>
            <div class="form-group mt-2 p-2">
                <button type="submit"  class="btn btn-primary" >
                    ساخت
                </button>
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a class="btn btn-success" asp-action="Index">بازگشت به لیست</a>
</div>

@section Scripts{
    @*How To call partial view*@
    <partial name="_ValidationScriptsPartial" />
}

